<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/list_product_big"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/mug"
        android:id="@+id/image_product_big"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_product_name_big"
        tools:text="Name"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_product_big"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_product_name_big">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list_product_price_big"
                tools:text="Price"
                android:layout_marginLeft="150dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$ |"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:text="$ |"
                />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_product_weight_big"
            tools:text="Weight"

            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="grams"
                android:text="grams"
                android:paddingLeft="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/quantity_section">
            <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list_product_quantity_big"
                tools:text="Quantity"
                android:padding="5dp"/>
            <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>
        </LinearLayout>

        <Button android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Add to basket"
            android:layout_below="@id/quantity_section"/>

    </RelativeLayout>

</RelativeLayout>